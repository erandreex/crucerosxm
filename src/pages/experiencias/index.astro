---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import "../../styles/global.css";

import Footer from "../../components/Footer.astro";
import { getImage } from "astro:assets";

const experienciasBase = await getCollection("experiencias");

// Ordenar por fecha (más reciente primero)
const experienciasOrdenadas = experienciasBase.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const experiencias = await Promise.all(
	experienciasOrdenadas.map(async (entrada) => ({
		...entrada,
		optimizedImg: await getImage({
			src: `/${entrada.data.img}`,
			width: 800,
			height: 800,
			format: "webp",
		}),
	}))
);
---

<Layout title="Experiencias" description="Aqui se comparten las experiencias de vida de Ernesto Solís.">
	<Header />

	<div class="max-w-7xl py-4 px-6 md:px-6 mx-auto min-h-screen">
		<div class="flex items-center space-x-2 text-gray-400 py-10">
			<a href="/" class="hover-text-primary">Inicio</a>
			<span>/</span>
			<a href="/experiencias" class="hover-text-primary">Experiencias</a>
		</div>

		<h2 class="text-4xl font-bold text-primary">Mis experiencias</h2>
		<p class="text-gray-400 py-4 mb-4">
			Experiencias de vida que quiero compartir con todos, una mezcla de innovación, alegrías, desarrollo y más.
		</p>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-4">
			{
				experiencias.map((experiencia: any) => (
					<a href={`/experiencias/${experiencia.slug}`} class="block h-full">
						<div class="bg-white rounded-lg p-3 image-wrapper relative overflow-hidden h-full flex flex-col">
							<div class="relative">
								<img
									src={`${experiencia.optimizedImg.src}`}
									alt={`${experiencia.data.title}`}
									transition:name={`${experiencia.data.title}-image`}
									class="w-full h-60 object-cover rounded-lg"
								/>
							</div>
							<div class="py-6 flex flex-col flex-grow">
								<h2 class="text-primary text-xl font-bold mb-2">{experiencia.data.title}</h2>
								<p class="text-primary line-clamp-3 flex-grow">{experiencia.data.description}</p>
							</div>
						</div>
					</a>
				))
			}
		</div>
	</div>

	<Footer />
</Layout>
