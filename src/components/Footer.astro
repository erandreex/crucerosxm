		<div class="grid md:grid-cols-3 gap-8 mb-12">
			<!-- Columna izquierda -->
			<div class="space-y-4">
				<div class="text-sm text-gray-600 space-y-1">
					<p>CALLE 72 SAN FRANCISCO CENTER</p>
					<p>CI PANAMÁ EDIFICIO 175, PISO 1</p>
					<a href="tel:+5076578912" class="text-brand-blue hover:underline">+507 6578912</a>
					<br />
					<a href="mailto:ventas1@crucerosporelmundo.com" class="text-brand-blue hover:underline"> ventas1@crucerosporelmundo.com </a>
					<br />
					<a href="mailto:ventas2@crucerosporelmundo.com" class="text-brand-blue hover:underline"> ventas2@crucerosporelmundo.com </a>
				</div>
			</div>

