<footer class="bg-footer-bg">
	<div class="container mx-auto px-4 py-12">
		<!-- Línea superior -->
		<div class="border-t border-gray-300 mb-12"></div>

		<Image src={imageLogoFooter} alt="Cruceros por el Mundo Logo" height={64} class="mb-10" />

