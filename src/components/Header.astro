---
import { Image } from "astro:assets";

import imageBannerHome from "../assets/images/logos/logo_crucerosXmundo-03.webp";
---

<header class="bg-primary text-white shadow-lg">
	<div class="container mx-auto max-w-6xl px-4">
		<div class="flex justify-between items-center py-3">
			<!-- Logo -->
			<div class="flex items-center">
				<a href="/" class="flex items-center">
					<Image src={imageBannerHome} height={40} alt="Cruceros por el Mundo" class="h-10" />
				</a>
			</div>

			<!-- Desktop Menu -->
			<nav class="hidden lg:flex items-center space-x-1">
				<a href="/" class="px-4 py-2 rounded-md hover:bg-navy-light transition-colors duration-200">Inicio</a>
				<a href="/experiencias" class="px-4 py-2 rounded-md hover:bg-navy-light transition-colors duration-200">Diarios de viajes</a>
				<a href="/contacto" class="px-4 py-2 rounded-md hover:bg-navy-light transition-colors duration-200">Contacto</a>
			</nav>

			<!-- Mobile Menu Button -->
			<div class="lg:hidden flex items-center">
				<button id="menu-toggle" class="flex items-center text-white focus:outline-none">
					<svg id="menu-icon" class="h-6 w-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
					<span class="uppercase font-medium">MENU</span>
				</button>
			</div>
		</div>
	</div>
</header>

<!-- Mobile Menu Overlay -->
<div id="mobile-menu-overlay" class="fixed inset-0 bg-gray-500/45 bg-opacity-50 z-40 hidden"></div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed top-0 right-0 bottom-0 w-4/5 max-w-sm bg-white z-50 shadow-xl mobile-menu">
	<div class="flex justify-between items-center p-4 border-b">
		<h2 class="text-xl font-bold text-navy">Men√∫</h2>
		<button id="close-menu" class="text-gray-500 hover:text-gray-700">
			<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		</button>
	</div>

	<nav class="p-4">
		<a href="/" class="block py-3 px-2 text-navy hover:bg-gray-100 rounded-md">Inicio</a>
		<a href="/#experiencias-exclusivas" class="block py-3 px-2 text-navy hover:bg-gray-100 rounded-md">Experiencias exclusivas</a>
		<a href="/experiencias" class="block py-3 px-2 text-navy hover:bg-gray-100 rounded-md">Diario de viajes</a>
		<a href="/#sobre-nosotros" class="block py-3 px-2 text-navy hover:bg-gray-100 rounded-md">Sobre Nosotros</a>
		<a href="/contacto" class="block py-3 px-2 text-navy hover:bg-gray-100 rounded-md">Contacto</a>

		<a
			href="https://specialneedsatsea.com/quote/?aid=265549"
			class="py-3 px-2 text-navy hover:bg-gray-100 underline text-brand-blue hover:underline flex flex-row gap-2 items-center"
			>Special Needs At Sea
			<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24">
				<path
					fill="currentColor"
					d="M18 19H6c-.55 0-1-.45-1-1V6c0-.55.45-1 1-1h5c.55 0 1-.45 1-1s-.45-1-1-1H5a2 2 0 0 0-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-6c0-.55-.45-1-1-1s-1 .45-1 1v5c0 .55-.45 1-1 1M14 4c0 .55.45 1 1 1h2.59l-9.13 9.13a.996.996 0 1 0 1.41 1.41L19 6.41V9c0 .55.45 1 1 1s1-.45 1-1V3h-6c-.55 0-1 .45-1 1"
				></path></svg
			>
		</a>
	</nav>
</div>
